{
  "name": "turbo-tailwind",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dev:turbo": "concurrently \"next dev --turbo\" \"tailwindcss --input ./styles/global.css --output ./styles/output.css --watch\""
  },
  "dependencies": {
    "next": "13.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "18.11.7",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.5.0",
    "eslint": "8.26.0",
    "eslint-config-next": "13.0.0",
    "tailwindcss": "^3.2.1",
    "typescript": "4.8.4"
  }
}
